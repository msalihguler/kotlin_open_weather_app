<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detailCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/main_padding"
        android:layout_marginTop="@dimen/main_padding"
        tools:text="Berlin" />

    <TextView
        android:id="@+id/detailDegreeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailCityName"
        android:layout_marginLeft="@dimen/main_padding"
        android:layout_marginTop="@dimen/main_padding"
        android:textSize="@dimen/medium_text_size"
        tools:text="27 °C" />

    <TextView
        android:id="@+id/detailsDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/main_padding"
        android:layout_marginTop="@dimen/main_padding"
        tools:text="01.01.1970" />

    <TextView
        android:id="@+id/detailsHumidityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/detailsDateText"
        android:layout_marginRight="@dimen/main_padding"
        android:layout_marginTop="@dimen/main_padding"
        tools:text="Humidity: 213" />

    <TextView
        android:id="@+id/detailPressureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/detailsHumidityText"
        android:layout_marginRight="@dimen/main_padding"
        android:layout_marginTop="@dimen/main_padding"
        tools:text="Pressure: 3" />

    <TextView
        android:id="@+id/detailMinimumDegreeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/detailPressureText"
        android:layout_marginRight="@dimen/main_padding"
        android:layout_marginTop="@dimen/main_padding"
        tools:text="Minimum Degree: 27 °C" />

    <TextView
        android:id="@+id/detailMaximumDegreeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/detailMinimumDegreeText"
        android:layout_marginRight="@dimen/main_padding"
        android:layout_marginTop="@dimen/main_padding"
        tools:text="Maximum Degree: 27 °C" />
</RelativeLayout>